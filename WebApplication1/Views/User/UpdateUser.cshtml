@model WebApplication1.Models.User
@{
    ViewBag.Title = "Изменение сотрудника";
}
<form asp-action="UpdateUser" asp-controller="User">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Surname" class="control-label">Surname</label>
        <input type="text" asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Patronymic" class="control-label">Patronymic</label>
        <input type="text" asp-for="Patronymic" class="form-control" />
        <span asp-validation-for="Patronymic"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date" class="control-label">Date</label>
        <input type="date" asp-for="Date" class="form-control" />
        <span asp-validation-for="Date"></span>
    </div>
    <div class="form-group">
        <label asp-for="Position" class="control-label">Position</label>
        <input type="text" asp-for="Position" class="form-control" />
        <span asp-validation-for="Position"></span>
    </div>
    <div>
        <label asp-for="Company" class="control-label">Company</label>
        @Html.DropDownListFor(model => model.Company, ViewBag.companyNames as SelectList, new { @class = "form-control" })
        <span asp-validation-for="Company"></span>
    </div>
    <br>
    <div class="form-group">
        <input type="submit" value="Изменить" class="btn btn-outline-secondary" />
        <a class="btn" asp-action="UserList">Отмена</a>
    </div>
</form>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}